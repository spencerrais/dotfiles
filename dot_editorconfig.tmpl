root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
tab_width = 4

[*.{json,jsonc}]
indent_style = space
indent_size = 2

[*.lua]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
tab_width = 4

[*.{md,mdx}]
trim_trailing_whitespace = false
indent_size = 2

[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

[*.{sh,bash,zsh}]
indent_style = space
indent_size = 4

[*.sql]
indent_style = space
indent_size = 4

[*.{tf,tfvars,hcl}]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2
